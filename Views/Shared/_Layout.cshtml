@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <title>SimpleBlog - @ViewBag.Title</title>
    @Styles.Render("~/styles")
</head>
<body>
    <div class="site-header">
        <header class="container">
            <h1 class="page-header">
                <a href="@Url.RouteUrl("Home")">Awesome Stuff!</a>
                <small>a simple blog powered by ASP.Net MVC</small>
            </h1>
        </header>
    </div>

    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @RenderBody()
            </div>
            <div class="col-lg-4 sidebar">
                <!-- call action on controller to inject a view-->
                <!-- need to add route -->
                @Html.Action("Sidebar", "Layout")
            </div>
        </div>

        <footer>
            &copy; @DateTime.UtcNow.Year
        </footer>
    </div>
    @Styles.Render("~/styles")
    @RenderSection("Scripts", false)
</body>
</html>
